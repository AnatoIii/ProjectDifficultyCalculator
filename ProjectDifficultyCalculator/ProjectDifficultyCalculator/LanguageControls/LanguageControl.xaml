<UserControl x:Class="ProjectDifficultyCalculator.LanguageControls.LanguageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectDifficultyCalculator.LanguageControls"
             mc:Ignorable="d">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="40"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Name="BName" Content="{Binding Language}" Style="{Binding Style}" Grid.Column="0" />
            <Button Name="BDelete" Grid.Column="1" Background="White" BorderThickness="0" Margin="3" Padding="3,3,3,5">
                x
            </Button>
        </Grid>
    </Grid>
</UserControl>
